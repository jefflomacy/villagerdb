{{> rev-unit1 }}
<a href="/user/{{username}}">Back to profile</a>
<h1>
    {{#if listId}}
        Edit List <span class="text-muted">{{listName}}</span>
    {{else}}
        Create New List
    {{/if}}
</h1>
{{#each errors}}
    <div class="alert alert-danger">
        {{msg}}
    </div>
{{/each}}
<form method="post" action="{{#if listId}}/list/edit/{{listId}}{{else}}/list/create{{/if}}">
    <div class="form-group">
        <label for="list-name">List Name</label>
        <input type="text" name="list-name" class="form-control" id="list-name"
               aria-describedby="list-name-help" placeholder="Enter new list name" maxlength="{{listNameLength}}"
               value="{{listName}}">
        <small id="list-name-help" class="form-text text-muted">
            This is the name of the list shown on your profile page.
        </small>
    </div>
    <div class="form-group">
        <label for="category-name">List Category (optional)</label>
        <input type="text" name="category-name" class="form-control" id="category-name"
               aria-describedby="category-name-help" placeholder="Clothing Category" maxlength="{{categoryNameLength}}"
               value="{{categoryName}}">
        <small id="category-name-help" class="form-text text-muted">
            <span style="color: red; font-weight: bold;">New!</span> You can change the category of your list by entering a name here. If you don't enter a name, your list
            will show in the uncategorized section of your profile page.
            <a target="_blank" href="/cms/list-categories-added">Learn More</a>
        </small>
    </div>
    <div>
        <label for="notes-name">Notes</label>
        <textarea type="text" name="notes" class="form-control" id="notes"
               aria-describedby="notes-help" placeholder="Enter any information you want people to know about this list"
                  maxlength="{{notesLength}}">{{notes}}</textarea>
        <small id="notes-help" class="form-text text-muted">
            These notes will be visible to anyone viewing your list.
        </small>
    </div>
    <button type="submit" name="submit" class="btn btn-primary">Submit</button>
</form>
