{{#if shouldDisplay }}
    <div class="col-xs-12 col-sm-6">
        <h2>{{title}}</h2>
        <table class="table">
            <thead class="sr-only">
            <th>Game</th>
            <th>Year</th>
            <th>{{valueName}}</th>
            </thead>
            <tbody>
            {{#each array}}
                <tr {{#unless isNew}}style="color: #999;"{{/unless}}>
                    <td class="align-middle font-weight-bold" style="width: 10%;"><abbr title="{{title}}">{{shortTitle}}</abbr></td>
                    <td class="text-center align-middle" style="width: 20%;">{{year}}</td>
                    <td class="align-middle" style="width: 70%;">{{value}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
{{/if}}