<h1>{{userName}}'s Profile</h1>
<div class="row">
    <div class="col-sm">
        <ul class="list-group">
            <li class="list-group-item action">{{userName}}'s Lists</li>
            {{#if isOwnUser}}
                {{#each lists}}
                    <li class="list-group-item">
                        <div class="float-left">
                            <a href="/user/{{../userName}}/list/{{id}}">{{name}}</a>
                        </div>
                        <div class="float-right">
                            <a href="/user/{{../userName}}/list/{{id}}" class="btn-sm btn-primary" role="button">Edit</a>
                            <a href="/user/{{../userName}}/list/{{id}}/delete" class="btn-sm btn-danger" role="button">Delete</a>
                        </div>
                    </li>
                {{/each}}
            {{else}}
                {{#each lists}}
                    <li class="list-group-item">
                        <div class="float-left">
                            <a href="/user/{{../userName}}/list/{{id}}">{{name}}</a>
                        </div>
                    </li>
                {{/each}}
            {{/if}}

        </ul>
    </div>
    {{#if isOwnUser}}
        <div class="col-sm">
            <ul class="list-group">
                <a href="/user/{{userName}}/create-list" class="list-group-item list-group-item-action">Create a new list</a>
            </ul>
        </div>
    {{/if}}
</div>
