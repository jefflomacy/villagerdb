<h1>{{name}}</h1>
<div class="row">
    <div class="col-sm-12 col-md-4 order-md-12 order-sm-1">
        <div class="text-center">
            <div>
                <a target="_blank" href="/images/villagers/full/{{id}}.png">
                    <img src="/images/villagers/medium/{{id}}.png" alt="{{name}}'s picture"
                     style="max-width: 200px; max-height: 200px;"/>
                </a>
            </div>
            {{#if hasQuotes}}
                <ul class="list-unstyled">
                    {{#each quotes}}
                        <li class="mt-3">&quot;{{quote}}&quot; - <em>{{title}}</em></li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>

        <div class="mt-3 mb-3 text-right">
            {{> socialMedia shareUrl=shareUrl}}
        </div>

        <table class="table table-borderless mt-3">
            <thead>
            <tr>
                <th class="bg-dark text-light font-weight-bold" colspan="2">Overview</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="bg-light text-dark font-weight-bold">Species</td>
                <td>{{species}}</td>
            </tr>
            <tr>
                <td class="bg-light text-dark font-weight-bold">Gender</td>
                <td>{{gender}}</td>
            </tr>
            <tr>
                <td class="bg-light text-dark font-weight-bold">Birthday</td>
                <td>{{birthday}} ({{zodiac}})</td>
            </tr>
            </tbody>
        </table>

        <div class="sleep-table"></div>

        <table class="table table-borderless">
            <thead class="bg-dark text-light">
            <th>Appears In</th>
            </thead>
            <tbody>
            <tr>
                <td>
                    <ul class="list-unstyled">
                        {{#each gameTitles}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>

        {{#if hasCoffee}}
            <table class="table table-borderless">
                <thead class="bg-dark text-light">
                <th>Coffee</th>
                </thead>
                <tbody>
                <tr>
                    <td>
                        <ul class="list-unstyled">
                            {{#each coffee}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </td>
                </tr>
                </tbody>
            </table>
        {{/if}}
    </div>

    <div class="col-sm-12 col-md-8 order-md-1 order-sm-12">
        <h2 class="sr-only">Summary</h2>
        <p>{{paragraph}}</p>

        <div class="row">
            {{> villagerGameData shouldDisplay=hasPersonalities title="Personality" valueName="personality"
                    array=personalities}}
            {{> villagerGameData shouldDisplay=hasClothing title="Clothing" valueName="Clothes" array=clothing}}
            {{> villagerGameData shouldDisplay=hasPhrases title="Phrases" valueName="Phrase" array=phrases }}
            {{> villagerGameData shouldDisplay=hasSongs title="Songs" valueName="Song" array=songs }}
        </div>
    </div>
</div>

<div id="personality-data" data-personality="{{ personalityMap }}"></div>
